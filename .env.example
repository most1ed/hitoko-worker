# Hitoko API Configuration
HITOKO_AUTH_TOKEN=your_bearer_token_here
HITOKO_API_BASE=https://www.hitoko.co.id
HITOKO_WS_URL=wss://www.hitoko.co.id/erp/ws-mqtt/mqtt

# Shop Configuration
SHOP_ID=your_shop_id_here
MARKETPLACE_CODE=00

# Webhook Configuration
# Single webhook:
WEBHOOK_URL=http://localhost:3000/webhook

# Multiple webhooks (comma-separated):
# WEBHOOK_URL=https://flow.devotetolove.com/webhook-test/xxx,https://flow.devotetolove.com/webhook/xxx

# Auto-Reply Configuration
# IMPORTANT: Auto-reply is DISABLED by default
# To enable auto-reply, run: npm run auto-reply
# Do NOT enable this in production unless you understand the implications
AUTO_REPLY_ENABLED=false

# Server Configuration
SERVER_PORT=3001
